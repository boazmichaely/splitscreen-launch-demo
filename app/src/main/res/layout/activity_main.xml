<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@android:color/white">

    <!-- Launch Spotify Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/launchSpotifyButton"
        android:layout_width="320dp"
        android:layout_height="72dp"
        android:layout_marginBottom="48dp"
        android:text="@string/launch_spotify"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#1DB954"
        style="@style/Widget.Material3.Button" />

    <!-- Test Theme Switch Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/testExitButton"
        android:layout_width="320dp"
        android:layout_height="72dp"
        android:text="@string/test_exit_method"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#E91E63"
        style="@style/Widget.Material3.Button" />

</LinearLayout>
